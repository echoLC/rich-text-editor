{
  "name": "rich-text-editor",
  "version": "1.1.7",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "repository": "https://github.com/echoLC/rich-text-editor.git",
  "author": "luochao <luochao@yy.com>",
  "license": "MIT",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --config ./build/webpack.prod.conf.js",
    "dev": "cross-env NODE_ENV=development webpack serve --config ./build/webpack.dev.conf.js",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "lint:fix": "eslint --fix \"src/**/*.{js,ts}\"",
    "prettier": "prettier --write \"src/**/*.{js,ts}\"",
    "test": "jest",
    "cypress:open": "cypress open",
    "release": "release-it"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-transform-typescript": "^7.11.0",
    "@babel/preset-env": "^7.11.5",
    "@release-it/keep-a-changelog": "^2.1.0",
    "@types/expect-puppeteer": "^4.4.5",
    "@types/jest-environment-puppeteer": "^4.4.0",
    "@types/puppeteer": "^3.0.4",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "autoprefixer": "^10.0.1",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "commitlint": "^11.0.0",
    "commitlint-config-cz": "^0.13.2",
    "concat-stream": "^2.0.0",
    "conventional-changelog": "^3.1.24",
    "cross-env": "^7.0.2",
    "css-loader": "^4.3.0",
    "cypress": "^5.5.0",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^4.3.0",
    "jest": "^26.6.2",
    "jest-puppeteer": "^4.4.0",
    "lint-staged": "^10.4.0",
    "mini-css-extract-plugin": "^1.0.0",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "postcss-loader": "^4.0.4",
    "prepend-file": "^2.0.0",
    "prettier": "^2.1.2",
    "puppeteer": "^5.4.1",
    "release-it": "^14.2.1",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.0.0",
    "webpack-cli": "^4.0.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.2.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "npm run prettier",
      "git add ."
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  }
}
